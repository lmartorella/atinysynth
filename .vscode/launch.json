{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Compile",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/pc/synth",
            "args": ["compile-mml", "resources/loreley.mml"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make project",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Play",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/pc/synth",
            "args": ["play", "sequencer.bin"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make project",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}